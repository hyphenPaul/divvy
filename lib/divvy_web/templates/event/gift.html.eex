<div class="event-gift clearfix">
  <h4 class="pull-left"><%= @gift.name %></h3>
  <div class="pull-right">
    <%= if @owned? do %>
        <%= link to: gift_path(@conn, :delete, @gift), method: :delete, data: [confirm: "Are you sure you want to delete this gift?"], class: "text-danger" do  %>
          <span class="glyphicon glyphicon-remove" aria-hidden= "true"></span>
        <% end %>
    <% end %>
  </div>
</div>

<p><%= @gift.description %></p>
